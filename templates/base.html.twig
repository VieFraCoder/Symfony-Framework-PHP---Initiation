      {% if is_granted('ROLE_ADMIN') %}
        <li class="nav-item">
          <a class="nav-link text-white" href="{{path('app_category_index')}}"> Category</a>
        </li> 
        <li class="nav-item">
          <a class="nav-link text-info" href="{{path('app_posting_new')}}"> | Admin Posting</a>
        </li> 
      {% endif %}

      {% if is_granted('ROLE_USER') %}
        <li class="nav-item">
          <a class="nav-link text-info" href="{{path('app_user_posting_new')}}"> | User Posting</a>
        </li> 
      {% endif %}
      </ul>
            <ul class="navbar-nav d-flex justify-content-end">
      {% if app.user %}
        <li class="nav-item">
          <a class="nav-link text-warning" aria-current="page" 
          href="#">
          <i class="bi bi-person-circle"></i> {{app.user.name}} {{app.user.lastname}}</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-info" aria-current="page" href="{{path('app_logout')}}"><i class="bi bi-box-arrow-in-left"></i> Logout</a>
        </li>

      {% else %} 
        <li class="nav-item">
          <a class="nav-link text-info" aria-current="page" href="{{path('app_login')}}"><i class="bi bi-box-arrow-in-right"></i> Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{path('app_register')}}"><button type="button" class="btn btn-warning lift btn-sm">Registration</button></a>
        </li> 
      {% endif %}
  
      </ul>
    </div>
  </div>
</nav>
