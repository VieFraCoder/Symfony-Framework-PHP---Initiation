{% extends 'base.html.twig' %}

{% block title %}Forum SF6{% endblock %}
{% block body %}

{% endblock %}
{% block main %}
        <!-- Page header with logo and tagline-->
        <header class="py-5 bg-light border-bottom mb-4 shadow bg-body rounded">
            <div class="container">
                <div class="text-center ">
                 <h1 class="fw-bolder text-info">Welcome to Forum Vietnam - France!</h1>
                 <p class="lead mb-0">The number one forum for Vietnamese community in France</p>
                 <p class="lead mb-0">We already have {{ nbUser }} members and posts</p>
                </div>
            </div>
        </header>
        <!-- Page content-->
        <div class="container">
            <div class="row">
                <!-- Blog entries-->
                <div class="col-lg-8">
                    <!-- Featured blog post-->
                    <div class="card mb-4">
                        {# <a href="#!"><img class="card-img-top" src="https://dummyimage.com/850x350/dee2e6/6c757d.jpg" alt="..." /></a> #}
                        <div class="card-body">
                            <div class="small text-muted">Mar 1, 2022</div>
                            <h2 class="card-title">Admin would like to say:</h2>
                            <p class="card-text">I'm trying my best to improve our forum</p>
                            {# <a class="btn btn-primary" href="#!">Read more →</a> #}
                        </div>
                    </div>
                    <hr>
                    <!-- Nested row for non-featured blog posts-->
                    <div class="row">
                            <!-- Blog post-->
                        {% for posting in list_posting %}   
                            <div class="card mb-4">
                                <a href="#!"><img class="card-img-top" src="{{asset('assets/images/' ~ posting.image)}}" alt="..." /></a>
                                <div class="card-body">
                                    <div class="small text-muted">{{ posting.executedAt ? posting.executedAt|date('Y-m-d H:i:s') : '' }}</div>
                                    <h2 class="card-title h4">{{ posting.title }}</h2>
                                    <p class="card-text">{{ posting.description | slice(0,150) }}</p>
                                    <a class="btn btn-primary" href="{{ path('show_detail_post',{'id':posting.id})}}">Read more →</a>
                                </div>
                            </div>
                        {% endfor %} 
                    
                    </div>
                    <!-- Pagination-->
                    <nav aria-label="Pagination">
                        <hr class="my-0" />
                        <ul class="pagination justify-content-center my-4">
                            <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">Newer</a></li>
                            <li class="page-item active" aria-current="page"><a class="page-link" href="#!">1</a></li>
                            <li class="page-item"><a class="page-link" href="#!">2</a></li>
                            <li class="page-item"><a class="page-link" href="#!">3</a></li>
                            <li class="page-item disabled"><a class="page-link" href="#!">...</a></li>
                            <li class="page-item"><a class="page-link" href="#!">15</a></li>
                            <li class="page-item"><a class="page-link" href="#!">Older</a></li>
                        </ul>
                    </nav>
                </div>
                <!-- Side widgets-->
                <div class="col-lg-4">
                    <!-- Search widget-->
                    <div class="card mb-4">
                        <div class="card-header">Search</div>
                        <div class="card-body">
                            <div class="input-group">
                                <input class="form-control" type="text" placeholder="Enter search term..." aria-label="Enter search term..." aria-describedby="button-search" />
                                <button class="btn btn-primary" id="button-search" type="button">Go!</button>
                            </div>
                        </div>
                    </div>
                    <!-- Categories widget-->
                    <div class="card mb-4">
                        <div class="card-header">Categories</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <ul class="list-unstyled mb-0">
                                        <li><a href="#!">Travel</a></li>
                                        <li><a href="#!">Foodie</a></li>
                                        <li><a href="#!">For rent</a></li>
                                    </ul>
                                </div>
                                <div class="col-sm-6">
                                    <ul class="list-unstyled mb-0">
                                        <li><a href="#!">Anoucement</a></li>
                                        <li><a href="#!">Ticket</a></li>
                                        <li><a href="#!">Tour</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Side widget-->
                    <div class="card mb-4">
                        <div class="card-header">Side Widget</div>
                        <div class="card-body">Advertisement 1</div>
                    </div>
                    <div class="card mb-4">
                        <div class="card-header">Side Widget</div>
                        <div class="card-body">Advertisement 2</div>
                    </div>
                    <div class="card mb-4">
                        <div class="card-header">Side Widget</div>
                        <div class="card-body">Advertisement 3</div>
                    </div>
                    <div class="card mb-4">
                        <div class="card-header">Side Widget</div>
                        <div class="card-body">Advertisement 4</div>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}
